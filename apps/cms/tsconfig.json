{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": false,
    "baseUrl": "./",
    "rootDir": "./",
    "types": ["node"],
    "resolveJsonModule": true
  },
  "include": ["./scripts/**/*.ts"],
  "exclude": ["node_modules", "build", "dist"]
}
